{% extends "base.html.twig" %}

{% block title %}
    Modifier une entrée
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% include "header/header.html.twig" %}
    <div class="container bg-light mt-5 py-5">
        {% if (oversight is defined) and (entry is defined) and (parameters is defined) and (details is defined) %}
            <div class="text-center">
                <h1 class="fs-3">{{ oversight.title }}</h1>
            </div>
            <div class="col-md-8 offset-md-2 mt-5">
                <form action="/oversight-entry/edit/{{ entry.id }}" method="post">
                    <div class="col-md-4">
                        <label for="date" class="form-label">Date & heure</label>
                        <input type="datetime-local" name="date" id="date" class="form-control" value="{{entry.date}}">
                    </div>
                    {% for parameter in parameters %}
                        {% for detail in details %}
                            {% if parameter.id == detail.parameterId %}
                                <div class="mt-3">
                                    <label class="form-label">
                                        {{ parameter.name }}
                                        {% if parameter.unit != null %}
                                            ({{ parameter.unit }})
                                        {% endif %}
                                    </label>
                                    <input type="number" name="parameter-{{ parameter.id }}" class="form-control" min="0" step="any" value="{{detail.value}}">
                                </div>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                    <div class="mt-4 mb-3">
                        <button type="submit" class="btn btn-primary col-md-3 offset-md-9">Modifier données</button>
                    </div>
                </form>
            </div>
        {% else %}
            {{ dump(message) }}
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}