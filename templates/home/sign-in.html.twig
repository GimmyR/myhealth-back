{% extends "base.html.twig" %}

{% block title %}
    Se connecter
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sign-in.css') }}" />
{% endblock %}

{% block body %}
    <div class="container">
        <form action="/sign-in" method="post" class="col-md-4 offset-md-4 mt-3 py-4 rounded bg-light">
            <div class="mb-3 px-4">
                <label for="email" class="form-label">Adresse Email</label>
                <input type="email" name="email" id="email" class="form-control" />
            </div>
            <div class="mb-4 px-4">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" name="password" id="password" class="form-control" />
            </div>
            <div class="text-center mb-4 fs-7">
                <a href="#" class="text-decoration-none">Créer un compte</a> <span class="text-primary">|</span> 
                <a href="#" class="text-decoration-none">Mot de passe oublié ?</a>
            </div>
            <div class="mb-3 px-4">
                <button type="submit" class="btn btn-primary col-md-12">Se connecter</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}